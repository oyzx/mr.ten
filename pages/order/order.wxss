/* pages/order/order.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
/* 头部  */
.header {
  width: 100%;
  height: 2.5rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFF100;
  position: fixed;
  z-index: 2;
}
.header .headers {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.header .header-titile {
  width:75%;
}
.header .header-icon {
  width:15%;
}
.header .header-icon image {
  width:25px;
  height:25px;
}

/* 订单列表  */
.order-list {
  padding-top: 2.5rem;
  padding-left: 27rpx;
  padding-right: 27rpx;
}
.order-list .order-single {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.order-list .order-single .image {
  width: 60rpx;
  margin-top: 8rpx;
}
.order-list .order-single .image image {
  width:45rpx;
  height:45rpx;
}
.single-into .name {
  font-size: 16px;
}
.single-into .time,.single-into .way {
  font-size: 12px;
  color: #888888;
}
