page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
/* 头部  */
.header {
  width: 100%;
  height: 2.5rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFF100;
  position: fixed;
  z-index: 2;
}
.header .headers {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.header .header-titile {
  width:75%;
}
.header .header-icon {
  width:15%;
}
.header .header-icon image {
  width:25px;
  height:25px;
}

/* 轮播  */
.carous {
  padding-top: 2.5rem;
}
.carous .slide-image {
  width: 100%;
}

/* 定位  */
.map {
  width: 98%;
  height: 50rpx;
  padding-left: 1%;
  padding-right: 1%;
  background-color: #eee; 
  display: flex;
  flex-direction: row;
}
.maps {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.map .map-image image {
  width: 38rpx;
  height: 38rpx;
}
.map .map-image.right {
  margin-left: auto;
  margin-right: 0px;
  align-items: flex-end;
}
.map .map-text text{
  margin-left: 5rpx;
  font-size:11px;
  color:#888;
} 

/* 商品分类  */
.commodity {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 4px solid #eeeeee;
}
.commodity .sort {
  width: 47%;
  padding-left: 3%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  display: flex;
  align-items: center;
}
.commodity .sort image {
  width: 120rpx;
  height: 120rpx;
}
.commodity .sort .intro {
  display: flex;
  flex-direction: column;
}
.commodity .sort .intro .name {
  font-size: 16px;
}
.commodity .sort .intro .memo {
  font-size: 12px;
  color: #888888;
}

/* 商品列表  */
.commoditys {
  width: 94%;
  margin-top: 10rpx;
  padding-left: 3%;
  padding-right: 3%;
  display: flex;
  flex-direction: column;
}
.commoditys .commodity-list {
  margin-top: 20rpx;
  border-bottom: 1px solid #eeeeee;
  display: flex;
  flex-direction: row;
}
.commoditys .commodity-list .image image {
  width:200rpx;
  height:200rpx;
  border-radius: 10rpx;
}
.commoditys .commodity-list .detail {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.commoditys .commodity-list .detail .name {
  font-size: 16px;
}
.commoditys .commodity-list .detail .memo {
  margin-top: 15rpx;
  margin-bottom: 5rpx;
  font-size: 12px;
  color: #888888;
}
.commoditys .commodity-list .detail .price {
  font-size: 12px;
  color: #F04253;
  font-weight: bold;
}
.commoditys .commodity-list .detail .unit {
  font-size: 12px;
  color: #888888;
}
.commoditys .commodity-list .detail .stock {
  font-size: 12px;
  color: #888888;
}